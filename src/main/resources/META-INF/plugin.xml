<idea-plugin>
    <id>com.github.trgcuong.bloc_generator_plugin</id>
    <name>Bloc Template Generator</name>
    <vendor email="trgcuong@gmail.com">Base Bloc</vendor>

    <description>
        <![CDATA[
            Base Bloc Template Generator.
        ]]>
    </description>

    <actions>

        <action class="com.bloc.intellij_generator_plugin.action.GenerateBlocAction"
                description="Generate a new Bloc"
                id="GenerateBlocId"
                text="Bloc Template">
            <add-to-group
                    group-id="NewGroup"
                    relative-to-action="NewGroup"
                    anchor="after"/>
        </action>
    </actions>
</idea-plugin>